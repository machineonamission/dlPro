{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "dlPro",
  "description": "",
  "version": "0.0.1",
  "action": {
    "default_title": "dlPro: click to download current page"
  },
  "permissions": [
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/*",
        "logo/*",
        "iframe/iframe.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo/light/logo-16.png",
    "32":  "logo/light/logo-32.png",
    "48":  "logo/light/logo-48.png",
    "64":  "logo/light/logo-64.png",
    "128":  "logo/light/logo-128.png"
  }
}
