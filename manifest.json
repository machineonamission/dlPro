{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "ytdlpxtn",
  "description": "",
  "version": "0.0.1",
  "action": {
    "default_title": "ytdlpxtn",
    "default_popup": "popup/index.html"
  },
  "options_page": "popup/index.html",
  "permissions": [
    "storage", "activeTab", "cookies"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "./popup/pyodide/pyodide.js",
        "./popup/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }]
}
